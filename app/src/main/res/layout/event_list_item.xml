<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/emonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="SEP"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/ename"
        android:layout_alignStart="@+id/ename"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/edate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="35sp"
        android:textColor="#ff0004"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/emonth"
        android:layout_alignStart="@+id/emonth"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/ename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="AntarAgni '16 Central India Prelims "
        android:textSize="21sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/eday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/edate"
        android:text="Sat" />
    <TextView
        android:id="@+id/etime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:00"/>

    <TextView
        android:id="@+id/eplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="UIT RGPV" />

    <TextView
        android:id="@+id/ecity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eplace"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/eplace"
        android:layout_marginTop="11dp"
        android:text="Bhopal" />

</RelativeLayout>