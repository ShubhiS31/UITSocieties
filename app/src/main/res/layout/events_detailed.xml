<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

<RelativeLayout
    android:id="@+id/top_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textColor="#f29c00"
        android:padding="6dp"
        android:textSize="22sp"
        android:layout_below="@id/cover"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On 23rd Oct 2017 at 1:00 PM"
        android:textColor="#f29c00"
        android:padding="6dp"
        android:layout_below="@id/event_name"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue: UIT RGPV, Bhopal"
        android:textColor="#f29c00"
        android:padding="6dp"
        android:layout_below="@id/date_time"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/descp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f29c00"
        android:text="The description of the event goes here. The description of the event goes here. The description of the event goes here. The description of the event goes here."
        android:padding="6dp"
        android:layout_below="@id/venue"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"/>
    </RelativeLayout>
</ScrollView>

<RelativeLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true">

<Button
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="SHOW IN MAP"
    android:layout_alignParentBottom="true"/>
</RelativeLayout>

</LinearLayout>